<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="itson.sushivan_empresa.PedidoActivity">

    <TextView
        android:id="@+id/nombre_producto"
        android:layout_marginBottom="16dp"
        android:textSize="18sp"
        android:text="Nombre del producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/descripcion_producto"
        android:layout_marginBottom="16dp"
        android:textSize="18sp"
        android:text="Descripcion del producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/precio_producto"
        android:layout_marginBottom="16dp"
        android:textSize="18sp"
        android:text="Precio del producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/boton_terminar"
        android:text="Marcar como terminado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
